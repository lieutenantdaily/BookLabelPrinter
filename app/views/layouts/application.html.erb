<!DOCTYPE html>
<html>
  <head>
    <title>TBM - <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>  
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>    
		<script src="https://kit.fontawesome.com/9bceb5a785.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.5/jspdf.debug.js"></script>

    <link rel="shortcut icon" href="https://buyback.textbookmaniac.com/images/favicon.ico" type="image/icon"> 
    <link rel="icon" href="https://buyback.textbookmaniac.com/images/favicon.ico" type="image/icon"> 
    
  </head>

  <body>

    <%= render 'layouts/header' %>

    <div class="flex-row">
      <% if notice %>
        <p class="alert-success navbar-text float-left position-absolute pl-3 w-100" style="z-index: -1">
            <span class="btn pt-1 pb-1 no-shadow"><%= notice %></span>
        </p>
      <% end %>
      <% if alert %>
        <p class="alert-danger navbar-text float-left position-absolute pl-3 w-100" style="z-index: -1">
            <span class="btn pt-1 pb-1 no-shadow"><%= alert %></span>
        </p>
      <% end %>

      <p class="navbar-text float-right mr-3">
        <% if user_signed_in? %>
            <span class="btn pt-1 pb-1 no-shadow">Logged in as <strong><%= current_user.first_name %> <%= current_user.last_name %></strong></span>
            <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link btn btn-secondary div-shadow pt-1 pb-1' %> 
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link btn btn-danger div-shadow ml-2 pt-1 pb-1'  %>
        <% else %>
            <%= link_to "Request an Account", new_user_registration_path, :class => 'navbar-link btn btn-success div-shadow pt-1 pb-1'  %> 
            <%= link_to "Login", new_user_session_path, :class => 'navbar-link btn btn-primary div-shadow ml-2 pt-1 pb-1'  %>
        <% end %>          
      </p>
      <br>
      
    </div>
    <br>

    <%= yield %>

  </body>
</html>
