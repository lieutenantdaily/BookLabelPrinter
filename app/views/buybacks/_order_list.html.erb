<center>
    <h2>Recent Orders</h2>
</center>
<br>
<div id="content">
    <div id="item" class="container card p-0 label-font div-shadow label overflow-hidden rounded">
        <table class="bg-light overflow-hidden rounded" style="width:100%">
            <tr class="bg-dark" style="margin-top:-30px; color:white">
                <th class="text-center">Order ID</th>
                <th class="text-center">Order Date</th>
                <th class="text-center">Vendor</th>
                <th class="text-center">Total Items</th>
                <th class="text-center">Status</th>
            </tr>
            <% if @all_orders[0,100].present? %>
                <% @all_orders[0,1000].each do |a|%>
                    <tr class="">
                            <td class="text-center p-2 label-edit-label"><a href="/buybacks?search=<%= a.order_id %>" target="_self"><b><%= a.order_id %></b></a></td>
                            <td class="text-center p-2 label-edit-label"><b><%= a.created_at.strftime("%m/%d/%Y") %></b></td>
                            <td class="text-center p-2 label-edit-label"><%= a.vendor %></td>
                            <td class="text-center p-2 label-edit-label">
                                    <%= @summary_buybacks_counter.where(order_id: a.order_id).count %>
                            </td>
                            <td class="text-center p-2">
                                <div class="processing-complete"><%= @summary_buybacks_counter.where(order_id: a.order_id).where(status: ["Review", "Review-Keep"]).count + @summary_buybacks_counter.where(order_id: a.order_id).where(status: ["Reject-Blue", "Reject-Yellow"]).where(notes: "").count %> items to process</div>
                            </td>
                    </tr>
                <% end %>
            <% end %>
        </table>
    </div>
</div>
        


