<br>
<center>
    <h1><% content_for :title, "Login" %></h1>
</center>
<br>
<center>
  <div class="container card card-body mt-3 mb-5 div-shadow label-container text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <h3><%= f.label :email %></h3>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'inline-block appearance-none p-3 h-100 w-50 m-0 align-top text-center border-none font-20 input-shadow overflow-hidden border-none div-shadow mt-1' %>
        </div>
        <br>
        <div class="field">
          <h3><%= f.label :password %></h3>
          <%= f.password_field :password, autocomplete: "current-password", class: 'inline-block appearance-none p-3 h-100 w-50 m-0 align-top text-center border-none font-20 input-shadow overflow-hidden border-none div-shadow mt-1 mb-1' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>

        <div class="actions">
          <%= button_tag type: 'submit', class: "btn btn-primary div-shadow font-20 mt-3", id: "submit-button" do %>
              <i class="fas fa-sign-in-alt"></i> Login
          <% end %>
        </div>
      <% end %>
  </div>
</center>

